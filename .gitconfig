[user]
	name = Yevgeny Papazyan
	email = evgeny1998oo@gmail.com
[credential]
	helper = cache --timeout 36000
[alias]
	co = checkout
	br = branch
	ci = commit
	st = status
[core]
    pager = delta

[delta]
	side-by-side = true
    navigate = true    # use n and N to move between diff sections
	features = catppuccin-macchiato

[interactive]
    diffFilter = delta --color-only

[merge]
    conflictstyle = diff3

[diff]
    colorMoved = default

[include]
	path = .config/delta/themes/catppuccin.gitconfig

