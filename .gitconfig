[user]
	name = Yevgeny Papazyan
	email = evgeny1998oo@gmail.com
[credential]
	helper = cache --timeout 36000
[alias]
	co = checkout
	br = branch
	ci = commit
	st = status

# Set difftastic as diff tool
[diff]
        tool = difftastic

[difftool]
        prompt = false

[difftool "difftastic"]
        cmd = difft "$LOCAL" "$REMOTE"

[pager]
        difftool = true

# `git dft` is less to type than `git difftool`.
[alias]
        dft = difftool

# `git dlog` to show `git log -p` with difftastic.
[alias]
        dlog = "-c diff.external=difft log -p --ext-diff"

